<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChairmanNoticeInformation">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chairman_notice_sent"
        android:text="Notice :"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:textColor="@color/teal_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chairman_notice_title_sent"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:textColor="@color/teal_700"
        app:layout_constraintStart_toEndOf="@+id/chairman_notice_sent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/chairman_notice_line1_sent"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="52dp"
        android:layout_margin="10dp"
        android:background="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chairman_notice_sent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chairman_notice_description_sent"
        android:layout_margin="10dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chairman_notice_line1_sent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chairman_notice_created_at_sent"
        android:inputType="textMultiLine"
        android:textSize="20dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/chairman_notice_description_sent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:id="@+id/admin_notice_line2"
        android:background="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@+id/chairman_notice_created_at_sent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>